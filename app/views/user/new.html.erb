<div class="jumbotron">
  <h1 class="display-4 text-white font-weight-bold">Création d'un compte</h1>
    <p class="lead text-white">Deviens le plus famous des gossipeurs !</p>
</div>

<% if @user.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n'avons pas réussi à créer votre utilisateur pour la (ou les) raison(s) suivante(s) :</p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
  
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
      <%= form_tag url_for(action: 'create'), method: "post" do %>

        <%= label_tag 'Nom' %>
        <%= text_field_tag 'last_name' %>
        <br /> <br />

        <%= label_tag 'Prénom' %>
        <%= text_field_tag 'first_name' %>
        <br /> <br />

        <%= label_tag 'Petite description' %>
        <%= text_field_tag 'description' %>
        <br /> <br />

        <%= label_tag 'E-mail' %>
        <%= text_field_tag 'email' %>
        <br /> <br />

        <%= label_tag 'Age' %>
        <%= text_field_tag 'age' %>
        <br /> <br />

        <%= label_tag 'Mot de passe' %>
        <%= password_field_tag 'pass_first' %>
        <br /> <br />

        <%= label_tag 'Confirmation mot de passe' %>
        <%= password_field_tag 'pass_second' %>
        <br /> <br />

        <%= submit_tag "Créer mon profil" %>

      <% end %>
    </blockquote>
  </div>


